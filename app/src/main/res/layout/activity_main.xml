<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="12dp"
        app:srcCompat="@drawable/sparkworkout" />

    <ImageView
        android:id="@+id/idLAVStepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:padding="0dp"
        android:src="@drawable/rr1" />

    <ImageView
        android:id="@+id/idLAVExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="304.5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:padding="0dp"
        android:src="@drawable/rr2" />

    <ImageView
        android:id="@+id/idLAVBodyMass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="534.5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:padding="0dp"
        android:src="@drawable/rr3" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="670dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/idLLStepCounter"
            android:layout_width="393dp"
            android:layout_height="127dp"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/idLLExercise"
            android:layout_width="393dp"
            android:layout_height="142dp"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/idLLBodyMass"
            android:layout_width="393dp"
            android:layout_height="217dp"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>